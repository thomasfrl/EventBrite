    <% if administrator?(event) %>
      <% text = 'Vous administrez cet événement' %>
    <% elsif participant?(event) %>
      <% text = 'Vous participez à cet événement' %>
    <% else %>
      <% text = 'Découvrez cet événement' %>
    <% end %>


<div class="card text-white bg-secondary m-3" style="max-width: 20rem;">
    <%= link_to event do  %>
        <%if event.event_image.attached?%>
          <%= image_tag(event.event_image, :alt => "event image", class: 'col-12 p-0') %> 
        <%else%>
          <%= image_tag("events/default.jpg", :alt => "event image", class: 'col-12 p-0') %> 
        <%end%>           
    <% end %>
    <div class="card-header"><%=text%></div>
    <div class="card-body">
        <h4 class="card-title"><%=event.title%></h4>
        <p class="card-text"><%= event.description[0..200] + " [...]" %></p>
    </div>
</div>