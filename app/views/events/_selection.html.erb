        </div>
        <%if event2.event_image.attached?%>
            <%= image_tag(event2.event_image, :alt => "event image", class: "side-picture col-6", style: 'object-fit: cover;') %> 
        <%else%>
            <%= image_tag("events/default.jpg", :alt => "event image", class: "side-picture col-6", style: 'object-fit: cover;') %> 
        <%end%>      
    </div>
</div>